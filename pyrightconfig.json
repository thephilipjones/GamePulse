{
  "include": ["backend"],
  "exclude": [
    "backend/.venv",
    "backend/.pytest_cache",
    "backend/.mypy_cache",
    "backend/.ruff_cache",
    "backend/htmlcov",
    "backend/alembic/versions",
    "frontend",
    "terraform",
    "**/__pycache__",
    "**/*.pyc"
  ],
  "executionEnvironments": [
    {
      "root": "backend",
      "pythonVersion": "3.13",
      "pythonPlatform": "Darwin"
    }
  ],
  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "typeCheckingMode": "basic",
  "useLibraryCodeForTypes": true
}
