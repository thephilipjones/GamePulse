{
  // ===== Editor Settings =====
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },

  // ===== Python (Backend) Settings =====
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  // Python extension settings
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,

  // Tell Pylance where to find Python source code (backend subdirectory)
  "python.analysis.extraPaths": [
    "${workspaceFolder}/backend"
  ],

  // Reduce noise from third-party libraries and type stub issues
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingTypeStubs": "none",
    "reportUnknownMemberType": "none",
    "reportGeneralTypeIssues": "warning"
  },

  // Exclude non-Python directories from analysis
  "python.analysis.exclude": [
    "**/node_modules",
    "**/.venv",
    "**/__pycache__",
    "**/frontend/**",
    "**/terraform/**",
    "**/backend/htmlcov/**",
    "**/backend/.pytest_cache/**",
    "**/backend/.mypy_cache/**",
    "**/backend/.ruff_cache/**"
  ],

  // Ignore frontend and infrastructure code
  "python.analysis.ignore": [
    "frontend/**",
    "terraform/**"
  ],

  // Ruff extension settings (native server)
  "ruff.enable": true,
  "ruff.importStrategy": "fromEnvironment",
  "ruff.nativeServer": true,

  // ===== JavaScript/TypeScript (Frontend) Settings =====
  "[javascript][javascriptreact][typescript][typescriptreact][json][jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // Biome extension settings
  "biome.enabled": true,

  // ===== File Exclusions =====
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/.venv": true
  },

  "search.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true,
    "**/node_modules": true,
    "**/.venv": true,
    "**/frontend/src/client": true
  },

  // ===== Git Settings =====
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ===== Docker Settings =====
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // ===== Markdown Settings =====
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  }
}
