{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "files": {
    "ignore": [
      "src/client/**/*",
      "*.gen.ts",
      "*.gen.tsx",
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      ".vite/**/*",
      "coverage/**/*",
      "playwright-report/**/*",
      "test-results/**/*",
      "blob-report/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
